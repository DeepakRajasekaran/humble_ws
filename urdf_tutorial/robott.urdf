<?xml version="1.0"?>
<robot name="robott">

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="green">
        <color rgba="0 1 0 1"/> 
    </material>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.2 0.15 0.15"/>
            </geometry>
            <origin xyz="0 0 0.075" rpy="0 0 0"/>
            <material name="blue"/>
        </visual>
    </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.011"/>
            </geometry>
            <origin xyz="0 0 0.0055" rpy="0 0 0"/>
            <material name="green"/>
        </visual>
    </link>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.035" length="0.011"/>
            </geometry>
            <origin xyz="0 0 0.0055" rpy="0 0 0"/>
            <material name="green"/>
        </visual>
    </link>

    

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.075 0" rpy="4.712 0 0"/>
        <axis xyz="0 0 1"/>
        <!--limit lower="-3.14" upper="3.14" effort="100" velocity="100" effort="100"/-->
    </joint>

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.075 0" rpy="1.571 0 0"/>
        <axis xyz="0 0 1"/>
        <!--limit lower="-3.14" upper="3.14" effort="100" velocity="100" effort="100"/-->
    </joint>

</robot>
